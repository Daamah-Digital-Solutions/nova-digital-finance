# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=novadf.com,www.novadf.com,api.novadf.com

# Database (PostgreSQL for production)
DATABASE_URL=postgres://user:password@localhost:5432/nova_digital_finance

# Frontend URL
FRONTEND_URL=https://novadf.com

# Redis / Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# =====================================================
# EMAIL CONFIGURATION
# =====================================================
# Option 1: Gmail SMTP (for testing/small volume)
# Note: For Gmail, you need to enable "App Passwords" in your Google account
# Go to: Google Account > Security > 2-Step Verification > App passwords
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Nova Digital Finance <noreply@novadf.com>

# Option 2: Custom SMTP Server
# EMAIL_HOST=mail.novadf.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=noreply@novadf.com
# EMAIL_HOST_PASSWORD=your-password
# DEFAULT_FROM_EMAIL=Nova Digital Finance <noreply@novadf.com>

# Option 3: SendGrid (recommended for production)
# EMAIL_BACKEND=anymail.backends.sendgrid.EmailBackend
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxx

# Option 4: Mailgun
# EMAIL_BACKEND=anymail.backends.mailgun.EmailBackend
# MAILGUN_API_KEY=key-xxxxxxxxxxxxx
# MAILGUN_SENDER_DOMAIN=mg.novadf.com

# =====================================================
# GOOGLE OAUTH
# =====================================================
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# =====================================================
# PAYMENT GATEWAYS
# =====================================================
# Stripe
STRIPE_SECRET_KEY=sk_live_xxxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# NowPayments (Crypto)
NOWPAYMENTS_API_KEY=your-api-key
NOWPAYMENTS_IPN_SECRET=your-ipn-secret
NOWPAYMENTS_SANDBOX=False
